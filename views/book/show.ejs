<h1><%= book.name %></h1>
<div>
  <img
    width="100"
    height="150"
    src="<%= book.coverImagePath %>"
    alt="<% book.title %>"
  />
</div>
<div class="actions">
  <a href="/books/<%=book.id%>/edit">Edit</a>
  <a href="/authors/<%=book.author.id%>">View author</a>
  <%-include("../partials/deleteForm",{url:`/books/${book.id}`}) %>
</div>
<div>
  <h3>Author name :<%=book.author.name%></h3>
  <p>description:<%=book.description%></p>
  <h3>Publish:<%=book.publishDate.toDateString()%></h3>
  <h3>Pages:<%=book.pageCount%></h3>
</div>
